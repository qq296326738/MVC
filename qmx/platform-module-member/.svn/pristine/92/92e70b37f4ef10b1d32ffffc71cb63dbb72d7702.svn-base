/*公共*/
a {
	color: initial;
}
ul {
	list-style: none;
}
.fg-black {
	color: #000 !important;
}

/*弹性布局*/
.flex {
	display: -webkit-box;
	display: -ms-flexbox;
	display: flex;
}
.flex-fill {
	-webkit-box-flex: 1;
    -ms-flex: 1;
    flex: 1;
}
.flex-item {
	-webkit-box-flex: 1;
    -ms-flex: auto;
    flex: auto;
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    -ms-flex-direction: column;
    flex-direction: column;
    -ms-flex-wrap: wrap;
    flex-wrap: wrap;
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    justify-content: center;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    line-height: 1;
}

/*首页*/
body[class^='forum'] .mui-bar-tab ~ .mui-content {
	padding-bottom: 30px;
}
body[class^='forum'] .mui-bar-tab {
	height: 30px;
	line-height: 30px;
	z-index: 11;
}
body[class^='forum'] .mui-bar-tab .mui-tab-item {
	height: 30px;
	background: #32509b;
	color: #fff;
}
body[class^='forum'] .mui-bar-tab .mui-tab-item > * {
	vertical-align: middle;
}
body[class^='forum'] .mui-bar-tab .mui-tab-item .mui-icon {
	top: 0;
}
body[class^='forum'] .mui-bar-tab .fa ~ .mui-tab-label {
	display: inline-block;
	font-size: 12px;
}
.forum .mui-slider-indicator {
	width: auto;
	bottom: 0;
	right: 10px;
}
.forum .mui-slider-indicator .mui-active.mui-indicator {
	background-color: #fff;
}
.forum .mui-slider-indicator .mui-indicator {
	margin-left: 0;
	margin-right: 0;
	box-shadow: none;
	background-color: #32509b;
}
.forum .forum-search {
	margin: 15px 10px;
	border: solid 1px #c8c8c8;
	border-radius: 25px;
	overflow: hidden;
}
.forum .forum-search input {
	margin-bottom: 0;
	height: 25px;
	border: none;
	font-size: 12px;
	padding-right: 0;
}
.forum-search a {
	width: 60px;
	background: url(../images/forum-seach-icon.png) #fff no-repeat scroll center center / 16px 16px;
}
.forum-index-list {
	padding-left: 0;
}
.forum-index-list .flex {
	flex-flow: row;
}
.forum-index-list li {
	padding: 10px;
	background: #fff;
	margin-bottom: 5px;
}
.forum-index-list h4, .forum-index-list h5, .forum-index-list p {
	margin-top: 0;
	margin-bottom: 0;
}
.forum-index-list h4 {
	font-size: 15px;
	font-weight: 400;
	color: #000;
	line-height: 1.2;
}
.forum-info-header {
	display: block;
	width: 24px;
	height: 24px;
	border-radius: 50%;
	overflow: hidden;
}
.forum-info-header > img {
	display: block;
	width: 100%;
}
.forum-index-info {
	padding-bottom: 8px;
}
.forum-index-list h4 ~ .forum-index-info {
	padding-top: 10px;
}
.forum-info-centent {
	padding-left: 10px;
	padding-right: 10px;
	-webkit-box-flex: 1;
	-ms-flex: 1;
	flex: 1;
}
.forum-info-centent h5 {
	font-size: 11px;
}
.forum-info-centent p {
	font-size: 8px;
	margin-top: 5px;
}
.forum-info-state {
	font-size: 9px;
}
.forum-info-centent.flex-item {
	justify-content: flex-start;
	align-items: flex-start;
}
.forum-info-state {
	display: block;
	width: 130px;
	color: #646464;
	text-align: right;
}
.for-article-img {
	padding-top: 4px;
	margin-right: 5px;
	width: 120px;
}
.more {
	color: #487cfe;
	white-space:nowrap;
}
.for-article-img > img {
	width: 100%;
}
.for-article-text {
	color: #646464;
	font-size: 12px;
	-webkit-box-flex: 1;
    -ms-flex: 1;
    flex: 1;
}
.forum-detaile .for-article-text {
    width: 100%;
}
.for-article-text .more {
	position: relative;
}
.forum-index-region {
	font-size: 9px;
	color: #646464;
	line-height: 1;
	padding-top: 5px;
}

/*问答详情*/
.forum-detaile .forum-index-list {
	margin-top: 0;
	margin-bottom: 0;
}
.forum-region-text {
	color: #32509b;
}
.forum-region-text .fa-map-marker {
	margin-right: 5px;
}
.forum-answer .forum-index-article, .forum-answer .forum-answer-list {
	margin-left: 34px;
}
.forum-answer-list {
	background-color: #f0f0f0;
	padding: 3px 5px;
	font-size: 11px;
	color: #646464;
}
.forum-answer .forum-answer-name {
	color: #32509b;
}
.forum-answer .forum-answer-more {
	position: relative;
	color: #4b4b4b;
}
.forum-answer .forum-answer-more:after, .forum-action .fa-ellipsis-v:after, .for-article-text .more:after {
	position: absolute;
	content: "";
	top: -15px;
	left: -15px;
	right: -10px;
	bottom: -15px;
	z-index: 10;
}
.forum-action {
	position: relative;
}
.forum-action .fa-ellipsis-v {
	position: relative;
	padding-left: 10px;
	padding-right: 10px;
	padding-bottom: 5px;
	color: #646464;
	font-size: 13px;
	z-index: 9;
}
.forum-action-list {
	display: none;
	background: #fff;
	border-radius: 3px;
	width: 80px;
	position: absolute;
	right: 0;
	font-size: 13px;
	text-align: center;
	box-shadow: 1px 3px 7px rgba(10,2,70,.36);
	z-index: 10;
}
.forum-active + .forum-action-list, .forum-active + .forum-action-list + .forum-action-pop {
	display: block;
}
.forum-action-li {
	padding-top: 10px;
	padding-bottom: 10px;
	border-top: solid 1px #c8c8c8;
}
.forum-action-li:first-child {
	border-top: none;
}
.forum-action-list .fa {
	margin-right: 8px;
}
.forum-action-li.forum-active {
	color: #ff0000;
}
.forum-action-pop {
	display: none;
	position: fixed;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	/*background-color: rgba(0,0,0,.5);*/
	z-index: 8;
}
.flex-article-img {
	overflow: hidden;
}
.flex-article-img > div {
	float: left;
	margin-right: 5px;
	overflow: hidden;
	margin-top: 5px;
}
.flex-article-img img {
	display: block;
	height: 60px;
}

/*问答*/
.answer, .login {
	background: #fff;
}
.answer-title {
	font-size: 15px;
	font-weight: 400;
	line-height: 1.5;
	background: #dcdcdc;
	padding: 15px;
}
.answer-textImg {
	-webkit-box-flex: 1;
    -ms-flex: 1;
    flex: 1;
}
.answer input[type="text"], .answer-textImg textarea {
	border: none;
	margin-bottom: 0;
}
.answer-title-input {
	font-size: 15px;
	margin-top: 20px;
}
input::-webkit-input-placeholder {
	color: #000;
}
input::-moz-placeholder {
	color: #000;
}
input:-moz-placeholder {
	color: #000;
}
input:-ms-placeholder {
	color: #000;
}
.answer-textImg textarea {
	font-size: 12px;
	width: 100%;
	height: 180px;
}
.answer-addImg {
	width: 100px;
	align-items: center;
	display: -webkit-box;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-ms-flex-direction: column;
	flex-direction: column;
	-ms-flex-wrap: wrap;
	flex-wrap: wrap;
	-webkit-box-pack: center;
	-ms-flex-pack: center;
	justify-content: center;
	-webkit-box-align: center;
	-ms-flex-align: center;
	align-items: center;
	line-height: 1;
}
.answer-addImg .mui-icon-plusempty {
	width: 50px;
	height: 50px;
	line-height: 50px;
	border: solid 1px #c8c8c8;
	color: #c8c8c8;
	font-size: 50px;
	margin-right: 8px;
}
.answer-img {
	overflow: hidden;
	padding-left: 15px;
	padding-right: 10px;
}
.answer-img-li {
	float: left;
	height: 60px;
	margin-right: 5px;
	margin-bottom: 5px;
}
.answer-img-li > img {
	height: 100%;
}
.answer-btn {
	background-color: #32509b;
	color: #fff;
	line-height: 1;
	padding: 5px 26px;
	font-size: 12px;
	border: solid 1px #32509b;
	border-radius: 5px;
	margin-right: 15px;
}
.answer-anonymous {
	border-top: solid 1px #c8c8c8;
	margin-top: 20px;
	padding-top: 15px;
	padding-left: 15px;
	padding-right: 15px;
	font-size: 12px;
	color: #646464;
}
.answer .mui-switch {
	float: right;
	height: 20px;
}
.answer .mui-switch-mini {
	width: 36px;
}
.answer .mui-switch .mui-switch-handle {
	width: 18px;
	height: 18px;
	box-shadow: 0 1px 3px rgba(0,0,0,.4);
}

/*登录注册*/
.login .mui-segmented-control {
	border: none;
	border-radius: 0;
	border-bottom: solid 1px #c8c8c8;
}
.login .mui-segmented-control .mui-control-item {
	border: none;
	color: #000;
	font-size: 12px;
	line-height: 24px;
	padding-top: 20px;
}
.login .mui-segmented-control .mui-control-item.mui-active {
	position: relative;
	background-color: #fff;
	font-weight: bold;
}
.login .mui-segmented-control .mui-control-item.mui-active:after {
	position: absolute;
	content: "";
	width: 50%;
	height: 2px;
	background: #32509b;
	bottom: 0;
	left: 50%;
	margin-left: -25%;
}
.login-box {
	padding-top: 64px;
}
.login-row {
	margin-left: 15px;
	margin-right: 15px;
	border-bottom: solid 1px #c8c8c8;
}
.login-forget {
	margin: 5px 15px 40px 15px;
	font-size: 10px;
}
.login-row label, .login-row input {
	font-size: 12px;
	margin-bottom: 0;
}
.login-row label {
	line-height: 40px;
	align-items: baseline;
}
#account .login-row label {
	padding-right: 15px;
}
.login-row input {
	border: none;
	width: auto;
	padding-left: 0;
	-webkit-box-flex: 1;
    -ms-flex: 1;
    flex: 1;
}
.login-btn {
	display: block;
	font-size: 12px;
	margin-left: auto;
	margin-right: auto;
	text-align: center;
	width: 80%;
	height: 32px;
	line-height: 30px;
	border: solid 1px #32509b;
	background-color: #32509b;
	border-radius: 5px;
	color: #fff;
}
.login .login-btn {
	margin-bottom: 95px;
}
.login-third {
	border-top: solid 1px #c8c8c8;
	width: 100%;
}
.login-third h5 {
	display: inline-block;
	background: #fff;
	padding-left: 6px;
	padding-right: 6px;
	margin-top: 0;
	margin-bottom: 0;
	margin-left: 50%;
	transform: translate(-50%,-13px);
	font-size: 12px;
	color: #000;
}
.login-third-table {
	display: table;
	width: 60%;
	margin-left: 20%;
	margin-right: 20%;
	padding-top: 20px;
}
.login-third-cell {
	width: 33.3333%;
	display: table-cell;
	text-align: center;
}
.login-third-table a {
	color: #4d4d4d;
}
.login-code-btn {
	background-color: #f7e01d;
	line-height: 30px;
	width: 90px;
	text-align: center;
	margin-top: 5px;
	margin-bottom: 5px;
	font-size: 12px;
	color: #000;
}
